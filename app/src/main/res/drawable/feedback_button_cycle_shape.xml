<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle" >
            <solid android:color="#ff58bb52" />
            <!--设置渐变色 angle=0 从左到右渲染，angle=90从上到下渲染，angle=180 从右到左渲染，-->
            <gradient
                android:angle="0"
                android:startColor="#f1c40f"
                android:endColor="#f39c12" />
            <!--设置角的弧度-->
            <corners android:radius="50dp" />
            <!--设置边框以及弧度-->
            <stroke
                android:width="1dp"
                android:color="#bdc3c7" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item  android:state_pressed="true">
        <shape>
            <!--点击之后的颜色-->
            <solid android:color="#dfe4ea"/>
            <!--设置角的弧度-->
            <corners android:radius="100dp"/>
            <!--点击之后的边框-->
            <stroke
                android:width="1dp"
                android:color="#ffeaa7"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
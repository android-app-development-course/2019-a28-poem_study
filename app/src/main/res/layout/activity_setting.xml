<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.mhkz.loginandregister.SettingActivity"
    android:orientation="vertical"
    android:background="#f1f2f6">

    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfe6e9"/>
    <Button
        android:id="@+id/AboutMe_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关于我们"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/about_me"
        android:drawableRight="@drawable/right_arrow"
        android:gravity="left|center_vertical"
        android:background="#FFFFFF"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfe6e9"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#dfe6e9"/>
    <Button
        android:id="@+id/JoinUs_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加入我们"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/join_us"
        android:drawableRight="@drawable/right_arrow"
        android:gravity="left|center_vertical"
        android:background="#FFFFFF"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfe6e9"/>

    <Button
        android:id="@+id/Switch"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="切换账号"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="@drawable/setting_button_cycle_shape"/>
    <Button
        android:id="@+id/exit"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="退出"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="@drawable/setting_button_cycle_shape"/>


</LinearLayout>

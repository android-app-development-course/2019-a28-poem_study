<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.mhkz.loginandregister.ExaminationActivity"
    android:background="#f1f2f6"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardElevation="30dp">

        <ImageView
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:background = "@drawable/examination_viewpage_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="1."
                    android:textColor="#7f8c8d"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="    落红不是无情物，化作__  __更护花。"
                    android:textColor="#7f8c8d"
                    android:textSize="25sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.github.rubensousa.raiflatbutton.RaiflatButton
                    android:id="@+id/A_btn"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:drawableLeft="@drawable/choice_a"
                    android:drawablePadding="5dip"
                    android:gravity="left|center_vertical"
                    android:paddingRight="15dip"
                    android:text="春泥"
                    android:textColor="#7f8c8d"
                    android:textSize="25dp" />

                <com.github.rubensousa.raiflatbutton.RaiflatButton
                    android:id="@+id/B_btn"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:drawableLeft="@drawable/choice_b"
                    android:drawablePadding="5dip"
                    android:gravity="left|center_vertical"
                    android:paddingRight="15dip"
                    android:text="春草"
                    android:textColor="#7f8c8d"
                    android:textSize="25dp" />

                <com.github.rubensousa.raiflatbutton.RaiflatButton
                    android:id="@+id/C_btn"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:drawableLeft="@drawable/choice_c"
                    android:drawablePadding="5dip"
                    android:gravity="left|center_vertical"
                    android:paddingRight="15dip"
                    android:text="夏花"
                    android:textColor="#7f8c8d"
                    android:textSize="25dp" />

                <com.github.rubensousa.raiflatbutton.RaiflatButton
                    android:id="@+id/D_btn"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:drawableLeft="@drawable/choice_d"
                    android:drawablePadding="5dip"
                    android:gravity="left|center_vertical"
                    android:paddingRight="15dip"
                    android:text="夏泥"
                    android:textColor="#7f8c8d"
                    android:textSize="25dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

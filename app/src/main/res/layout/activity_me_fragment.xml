<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_background"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/test_sytle"/>
    <Button
        android:id="@+id/Primary_btn"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/button_cycle_shape"
        android:text="小学"
        android:textSize="20dp"
        android:textColor="@color/grey_600"/>
    <Button
        android:id="@+id/JuniorMiddle_btn"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/button_cycle_shape"
        android:text="初中"
        android:textSize="20dp"
        android:textColor="@color/grey_600"/>
    <Button
        android:id="@+id/High_btn"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/button_cycle_shape"
        android:text="高中"
        android:textSize="20dp"
        android:textColor="@color/grey_600"/>

</LinearLayout>
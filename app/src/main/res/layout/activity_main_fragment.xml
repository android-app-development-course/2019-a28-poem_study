<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f1f2f6"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/Head_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/head" />

                <gr.escsoft.michaelprimez.searchablespinner.SearchableSpinner
                    android:layout_marginLeft="10dp"
                    android:id="@+id/SearchableSpinner"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:gravity="center_horizontal"
                    app:StartSearchTintColor="@android:color/white"
                    app:DoneSearchTintColor="#3498db"
                    app:RevealViewBackgroundColor="#3498db"
                    app:SearchViewBackgroundColor="@android:color/secondary_text_dark"
                    app:ShowBorders="false"
                    app:RevealEmptyText="查找"
                    app:SpinnerExpandHeight="300dp"
                    android:layout_gravity="center" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_main"
                style="@style/CardView.Light"
                android:layout_width="350dp"
                android:layout_height="311dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="25dp"
                            android:gravity="center"
                            android:text="剩余"
                            android:textColor="@color/grey_600"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="50dp"
                            android:gravity="center"
                            android:text="今天背诗"
                            android:textColor="@color/grey_600"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/day"
                            android:layout_width="75dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="25dp"
                            android:gravity="right|center"
                            android:text="12"
                            android:textColor="@color/black"
                            android:textSize="40dp" />

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="天"
                            android:textColor="@color/grey_600"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/number"
                            android:layout_width="75dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="40dp"
                            android:gravity="right|center"
                            android:text="5"
                            android:textColor="@color/black"
                            android:textSize="40dp" />

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="个"
                            android:textColor="@color/grey_600"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:gravity="left|center"
                            android:text="小学"
                            android:textColor="@color/grey_600"
                            android:textSize="20dp">

                        </TextView>

                        <Button
                            android:id="@+id/btn_plan"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="100dp"
                            android:background="@drawable/btn_plan"
                            android:gravity="center"
                            android:text="计划"
                            android:textColor="@color/grey_600"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="300dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@color/grey_600">

                    </View>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="match_parent"
                            android:gravity="left|center"
                            android:text="已完成"
                            android:textColor="@color/grey_600"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:gravity="right|center"
                            android:text="0"
                            android:textColor="@color/grey_600"
                            android:textSize="25dp" />

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="/"
                            android:textColor="@color/grey_600"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="65dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="left|center"
                            android:text="30"
                            android:textColor="@color/grey_600"
                            android:textSize="25dp" />

                    </LinearLayout>

                    <com.daimajia.numberprogressbar.NumberProgressBar
                        android:id="@+id/number_progress_bar"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        app:progress_reached_bar_height="10dp"
                        app:progress_text_size="20dp"
                        app:progress_unreached_bar_height="10dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:gravity="center"
                    android:text="今日需学习"
                    android:textColor="@color/grey_600"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/grey_600"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="/"
                    android:textColor="@color/grey_600"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/grey_600"
                    android:textSize="20dp" />

            </LinearLayout>

            <com.spark.submitbutton.SubmitButton
                android:id="@+id/btn_sub"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="开始背诗词吧"
                android:textColor="@color/gray"
                android:textSize="18dp"
                app:sub_btn_background="@color/white"
                app:sub_btn_duration="3000"
                app:sub_btn_line_color="#3498db"
                app:sub_btn_ripple_color="#3498db"
                app:sub_btn_tick_color="@color/white" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"></FrameLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>

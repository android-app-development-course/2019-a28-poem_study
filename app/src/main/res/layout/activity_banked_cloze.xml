<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.mhkz.loginandregister.BankedCloze"
    android:background="#f1f2f6"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="368dp"
        android:layout_height="576dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardElevation="30dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <ImageView
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:background = "@drawable/blanked_cloze_background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp">
                <Button
                    android:id="@+id/Home_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/home" />

                <TextView
                    android:id="@+id/Remember_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="需复习：10"
                    android:textSize="15sp"
                    android:textColor="#7f8c8d"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:paddingLeft="10dp"
                    android:textSize="25sp"
                    android:text="1."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:gravity="center|left"
                    android:textColor="#7f8c8d"/>
                <TextView
                    android:paddingLeft="10dp"
                    android:textSize="25sp"
                    android:text="    落红不是无情物，化作__  __更护花。"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/number"
                    android:gravity="center|left"
                    android:textColor="#7f8c8d"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.github.rubensousa.raiflatbutton.RaiflatButton
                    android:id="@+id/A_btn"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="5dip"
                    android:drawableLeft="@drawable/choice_a"
                    android:gravity="left|center_vertical"
                    android:paddingRight="15dip"
                    android:text="春泥"
                    android:textColor="#7f8c8d"
                    android:textSize="25dp" />

                <com.github.rubensousa.raiflatbutton.RaiflatButton
                    android:id="@+id/B_btn"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:drawableLeft="@drawable/choice_b"
                    android:drawablePadding="5dip"
                    android:gravity="left|center_vertical"
                    android:paddingRight="15dip"
                    android:text="春草"
                    android:textColor="#7f8c8d"
                    android:textSize="25dp" />

                <com.github.rubensousa.raiflatbutton.RaiflatButton
                    android:id="@+id/C_btn"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="5dip"
                    android:drawableLeft="@drawable/choice_c"
                    android:gravity="left|center_vertical"
                    android:paddingRight="15dip"
                    android:text="夏花"
                    android:textColor="#7f8c8d"
                    android:textSize="25dp" />

                <com.github.rubensousa.raiflatbutton.RaiflatButton
                    android:id="@+id/D_btn"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:drawableLeft="@drawable/choice_d"
                    android:drawablePadding="5dip"
                    android:gravity="left|center_vertical"
                    android:paddingRight="15dip"
                    android:text="夏泥"
                    android:textColor="#7f8c8d"
                    android:textSize="25dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
